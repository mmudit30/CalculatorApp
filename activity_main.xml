<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    android:background="@android:color/background_dark"
    tools:context="com.example.user.calculator.MainActivity">


    <Button
        android:id="@+id/bper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="14dp"
        android:background="#f75252"
        android:shadowColor="#ffffff"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:text="%" />

    <Button
        android:background="#f75252"
        android:shadowColor="#ffffff"
        android:textColor="#ffffff"
        android:textSize="20sp"

        android:id="@+id/b0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bper"
        android:layout_marginStart="13dp"
        android:layout_toEndOf="@+id/bper"
        android:text="0" />

    <Button
        android:id="@+id/bdot"
        android:layout_width="wrap_content"
        android:background="#f75252"
        android:shadowColor="#ffffff"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/b0"
        android:layout_alignBottom="@+id/b0"
        android:layout_toEndOf="@+id/b0"
        android:text="." />

    <Button
        android:id="@+id/bequal"
        android:layout_width="wrap_content"
        android:background="#f75252"
        android:shadowColor="#ffffff"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/bdot"
        android:text="=" />

    <Button
        android:id="@+id/b1"
        android:layout_width="wrap_content"
        android:background="#f75252"
        android:shadowColor="#ffffff"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bper"
        android:layout_marginBottom="11dp"
        android:layout_toStartOf="@+id/b2"
        android:text="1" />

    <Button
        android:id="@+id/b2"
        android:background="#f75252"
        android:shadowColor="#ffffff"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/b0"
        android:layout_alignTop="@+id/b1"
        android:text="2" />

    <Button
        android:id="@+id/b3"
        android:layout_width="wrap_content"
        android:background="#f75252"
        android:shadowColor="#ffffff"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/b2"
        android:layout_alignBottom="@+id/b2"
        android:layout_toEndOf="@+id/b2"
        android:text="3" />

    <Button
        android:id="@+id/badd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#f75252"
        android:shadowColor="#ffffff"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/b3"
        android:layout_alignBottom="@+id/b3"
        android:layout_toEndOf="@+id/b3"
        android:text="+" />

    <Button
        android:id="@+id/b4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/b1"
        android:layout_marginBottom="11dp"
        android:background="#f75252"
        android:shadowColor="#ffffff"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_toStartOf="@+id/b5"
        android:text="4" />

    <Button
        android:id="@+id/b5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#f75252"
        android:shadowColor="#ffffff"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_alignStart="@+id/b2"
        android:layout_alignTop="@+id/b4"
        android:text="5" />

    <Button
        android:id="@+id/b6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/b5"
        android:background="#f75252"
        android:shadowColor="#ffffff"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_alignBottom="@+id/b5"
        android:layout_toEndOf="@+id/b5"
        android:text="6" />

    <Button
        android:id="@+id/bsub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/badd"
        android:background="#f75252"
        android:shadowColor="#ffffff"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_below="@+id/b7"
        android:text="-" />

    <Button
        android:id="@+id/b7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/b4"
        android:layout_marginBottom="12dp"
        android:layout_toStartOf="@+id/b8"
        android:background="#f75252"
        android:shadowColor="#ffffff"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:text="7" />

    <Button
        android:id="@+id/b8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/b7"
        android:background="#f75252"
        android:shadowColor="#ffffff"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_alignBottom="@+id/b7"
        android:layout_alignStart="@+id/b5"
        android:text="8" />

    <Button
        android:id="@+id/b9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/b8"
        android:background="#f75252"
        android:shadowColor="#ffffff"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_alignBottom="@+id/b8"
        android:layout_toEndOf="@+id/b8"
        android:text="9" />

    <Button
        android:id="@+id/bmul"
        android:background="#f75252"
        android:shadowColor="#ffffff"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/b9"
        android:layout_alignBottom="@+id/b9"
        android:layout_toEndOf="@+id/b9"
        android:text="*" />

    <Button
        android:id="@+id/bac"
        android:layout_width="wrap_content"
        android:background="#f75252"
        android:shadowColor="#ffffff"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/b7"
        android:layout_marginBottom="11dp"
        android:layout_toStartOf="@+id/bdel"
        android:text="AC" />

    <Button
        android:id="@+id/bdel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bac"
        android:background="#f75252"
        android:shadowColor="#ffffff"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_alignEnd="@+id/b8"
        android:text="â—„" />

    <Button
        android:id="@+id/b00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bdel"
        android:background="#f75252"
        android:shadowColor="#ffffff"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_alignBottom="@+id/bdel"
        android:layout_toEndOf="@+id/bdel"
        android:text="00" />

    <Button
        android:id="@+id/bdiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/b00"
        android:background="#f75252"
        android:shadowColor="#ffffff"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_alignBottom="@+id/b00"
        android:layout_alignParentEnd="true"
        android:text="/" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="#f75252"
        android:shadowColor="#ffffff"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="177dp"
        android:visibility="visible"

        />

    <TextView
        android:id="@+id/cal"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="#f75252"
        android:shadowColor="#ffffff"
        android:textColor="#ffffff"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/res"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cal"
        android:layout_marginTop="56dp"
        android:textColor="#ffffff"
        android:textSize="30dp" />
</RelativeLayout>
